root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.lua]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.{md,txt}]
trim_trailing_whitespace = false

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{js,ts,cjs,mjs,jsx,tsx,astro}]
indent_style = space
indent_size = 2
